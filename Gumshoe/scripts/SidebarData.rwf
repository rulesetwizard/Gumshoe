--			tooltipres = "sidebar_tooltip_rest", 
--			class = "rest",
--			path = "rest" 
--			};
--	end
--	
--	DesktopManager.registerSidebarToolButton(tButton, 2);
--	
end

</Script>
    <RegisterScript>true</RegisterScript>
    <Encoding />
  </Scripts>
</DocumentElement>